@page
@model RBN_FE.Pages.HomeEvent.HomeEventDetailModel
@{
    ViewData["Title"] = Model.EventDetail?.Title ?? "Chi tiết Sự kiện";
}

<partial name="_Header" />

<div class="flex flex-wrap text-slate-800">
    <div class="relative hidden h-screen select-none flex-col justify-center bg-cover bg-center text-center md:flex md:w-1/2" style="background-image: url('@(Model.EventDetail?.EventImg?.ImageUrl ?? "/images/default-event-image.png")');">
        <div class="absolute inset-0 bg-gray-900 bg-opacity-50"></div>
        <div class="relative z-10 mx-auto py-16 px-8 text-white">
            <p class="my-6 text-4xl font-bold leading-10">Muốn trải nghiệm <span class="border-b-8 border-yellow-400 font-bold text-yellow-400">sự kiện ?</span></p>
            <p class="mb-4 text-lg font-medium">Đặt chỗ ngay phía bên phải nào!</p>
        </div>
    </div>
    <div class="flex w-full flex-col md:w-1/2">
        <div class="flex justify-center pt-12 md:justify-start md:pl-12">
            <a href="#" class="text-2xl font-bold text-gray-800 bg-yellow-400 px-2 py-1"> Sự kiện RBN </a>
        </div>
        <div class="my-auto flex w-full flex-col justify-center px-6 md:pl-12 pt-8 sm:pt-0 md:justify-start">
            @if (Model.EventDetail != null)
            {
                <h2 class="text-center text-3xl font-bold md:text-left mb-4">@Model.EventDetail.Title</h2>
                <p class="mb-4">@Model.EventDetail.Description</p>
                <p class="mb-2"><strong>Loại:</strong> @Model.EventDetail.EventType</p>
                <p class="mb-2"><strong>Giá:</strong> @Model.EventDetail.Price.ToString("C")</p>
                <p class="mb-4"><strong>Công ty:</strong> @Model.EventDetail.Company?.Name</p>
            }
            else
            {
                <h2 class="text-center text-3xl font-bold md:text-left mb-4">Không tìm thấy sự kiện.</h2>
            }

            <h3 class="text-2xl font-bold mb-4">Mẫu đặt chỗ</h3>
            <form method="post" class="flex flex-col items-stretch pt-3 pb-8 md:pt-8">
                <div class="grid gap-x-4 gap-y-3 sm:grid-cols-2">
                    <label class="block" for="FullName">
                        <p class="mb-1 mt-2 text-sm text-gray-600">Họ và tên</p>
                        <input asp-for="Booking.FullName" class="w-full rounded-md border bg-white py-2 px-2 outline-none ring-yellow-500 focus:ring-2" type="text" placeholder="Nhập họ và tên của bạn" required />
                    </label>
                    <label class="block" for="Email">
                        <p class="mb-1 mt-2 text-sm text-gray-600">Email</p>
                        <input asp-for="Booking.Email" class="w-full rounded-md border bg-white py-2 px-2 outline-none ring-yellow-500 focus:ring-2" type="email" placeholder="Nhập email của bạn" required />
                    </label>
                    <label class="block" for="Phone">
                        <p class="mb-1 mt-2 text-sm text-gray-600">Số điện thoại</p>
                        <input asp-for="Booking.Phone" class="w-full rounded-md border bg-white py-2 px-2 outline-none ring-yellow-500 focus:ring-2" type="tel" placeholder="Nhập số điện thoại của bạn" required />
                    </label>
                    <label class="block" for="Address">
                        <p class="mb-1 mt-2 text-sm text-gray-600">Địa chỉ</p>
                        <input asp-for="Booking.Address" class="w-full rounded-md border bg-white py-2 px-2 outline-none ring-yellow-500 focus:ring-2" type="text" placeholder="Nhập địa chỉ của bạn" required />
                    </label>
                    <label class="block sm:col-span-2" for="UserNote">
                        <p class="mb-1 mt-2 text-sm text-gray-600">Yêu cầu đặc biệt</p>
                        <textarea asp-for="Booking.UserNote" class="h-32 w-full rounded-md border bg-white py-2 px-2 outline-none ring-yellow-500 focus:ring-2" placeholder="Viết yêu cầu đặc biệt của bạn tại đây"></textarea>
                    </label>
                </div>
                <button type="submit" class="mt-6 rounded-full bg-yellow-400 px-4 py-2 text-center text-base font-semibold shadow-md outline-none ring-yellow-500 ring-offset-2 transition hover:bg-yellow-500 focus:ring-2 md:w-40">Đặt ngay</button>
            </form>

            @if (Model.RelatedEvents != null && Model.RelatedEvents.Count > 0)
            {
                <h3 class="text-2xl font-bold mb-4">Sự kiện liên quan</h3>
                <div class="scrollable-container">
                    @foreach (var relatedEvent in Model.RelatedEvents)
                    {
                        <div class="scrollable-card">
                            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                <img src="@relatedEvent.EventImg?.ImageUrl" class="w-full h-48 object-cover" alt="@relatedEvent.Title">
                                <div class="p-4">
                                    <h5 class="text-xl font-semibold mb-2">@relatedEvent.Title</h5>
                                    <p class="text-gray-600 mb-2">@relatedEvent.Description</p>
                                    <p class="text-sm text-gray-500 mb-4">@relatedEvent.EventType</p>
                                    <a asp-page="/HomeEvent/HomeEventDetail" asp-route-id="@relatedEvent.Id" class="bg-yellow-400 text-gray-800 px-4 py-2 rounded-full inline-block hover:bg-yellow-500 transition">Xem chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="mt-4">Không tìm thấy sự kiện liên quan.</p>
            }
        </div>
    </div>
</div>

<partial name="_Footer" />

<style>
    .scrollable-container {
        overflow-x: auto;
        white-space: nowrap;
        padding: 15px 0;
        -webkit-overflow-scrolling: touch;
    }

    .scrollable-card {
        display: inline-block;
        width: 18rem;
        margin-right: 15px;
        vertical-align: top;
    }
</style>