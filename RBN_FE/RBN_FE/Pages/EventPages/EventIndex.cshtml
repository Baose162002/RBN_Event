@page "/EventIndex"
@model RBN_FE.Pages.EventPages.EventIndexModel
@{
    ViewData["Title"] = "Danh sách Sự kiện";
}
<partial name="_Header" />

<div class="container mx-auto px-4">
    <h2 class="text-2xl font-bold mb-4">Chi tiết Sự kiện</h2>



    <!-- Tìm kiếm -->
    <div class="flex justify-between items-center mb-4">
        <div>
            <a href="/EventPages/CreateEvent" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded">Tạo Sự Kiện Mới</a>
        </div>
        <div class="flex-grow mx-4">
            <form method="get" class="flex items-center justify-end">
                <input type="text" name="searchTerm" value="@Model.SearchTerm" placeholder="Tìm kiếm theo tiêu đề, tên hoặc loại sự kiện" class="form-input w-2/3 mr-2" />
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">Tìm kiếm</button>
            </form>
        </div>
    </div>

    @if (Model.Events == null || !Model.Events.Any())
    {
        <p class="text-center">Không có sự kiện nào để hiển thị.</p>
    }
    else
    {
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 overflow-x-auto">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Hình ảnh
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tiêu đề
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Tên sự kiện
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Giá
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Trạng thái
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Ngày tạo
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var eventItem in Model.Events)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex-shrink-0 h-full w-full">
                                    <img class="h-64 w-full rounded-lg object-cover" src="@eventItem.EventImg?.ImageUrl" alt="@eventItem.Title">
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">@eventItem.Title</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@eventItem.Name</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">@eventItem.Price.ToString("N0") VND</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (eventItem.Status == 1)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                        Không hoạt động
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                @eventItem.CreateAt)
                            </td>
                              <td class="px-6 py-4 whitespace-nowrap">
                    <a href="/EventPages/EventDetail?id=@eventItem.Id" class="inline-block px-4 py-2 font-medium text-white bg-blue-600 rounded-md hover:bg-blue-500 focus:outline-none focus:shadow-outline-blue active:bg-blue-600 transition duration-150 ease-in-out">Chi tiết</a>
                    <a href="/EventPages/UpdateEvent?id=@eventItem.Id" class="inline-block ml-2 px-4 py-2 font-medium text-white bg-yellow-600 rounded-md hover:bg-yellow-500 focus:outline-none focus:shadow-outline-yellow active:bg-yellow-600 transition duration-150 ease-in-out">Cập nhật</a>
                    <a href="/EventPages/DeleteEvent?id=@eventItem.Id" class="inline-block ml-2 px-4 py-2 font-medium text-white bg-red-600 rounded-md hover:bg-red-500 focus:outline-none focus:shadow-outline-red active:bg-red-600 transition duration-150 ease-in-out">Xóa</a>
                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Phân trang -->
        <div class="mt-4 flex justify-between">
            @if (Model.PageNumber > 1)
            {
                <a class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" asp-page-handler="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Trước đó</a>
            }
            else
            {
                <div></div> <!-- Để giữ layout -->
            }

            @if (Model.TotalPages > Model.PageNumber)
            {
                <a class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" asp-page-handler="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Tiếp theo</a>
            }
            else
            {
                <div></div> <!-- Để giữ layout -->
            }
        </div>
    }
</div>

<partial name="_Footer" />