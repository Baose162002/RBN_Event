                    {
                        foreach (var fee in Model.PromotionFee)
                        {
                            <tr class="text-center border-b">
                                <td class="p-3">@fee.Id</td>
                                <td class="p-3">@fee.EndTime.ToString("dd/MM/yyyy")</td>
                                <td class="p-3">@String.Format("{0:N0}", fee.Price)</td>
                                <td class="p-3">@fee.Promotion.Description</td>
                                <td class="p-3">
                                    @if (fee.Status == 1)
                                    {
                                        <span class="text-green-600 font-semibold">Còn hạn</span>
                                    }
                                    else if (fee.Status == 0)
                                    {
                                        <span class="text-red-600 font-semibold">Hết hạn</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-600">Không xác định</span>
                                    }
                                </td>
                                <td class="p-3">
                                    <!-- Nút đăng ký gói quảng cáo trong bảng -->
                                    <button type="button" class="register-promotion-button bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-300">
                                        Đăng ký gói quảng cáo
                                    </button>
                                </td>
                            </tr>
                        }
