            <!-- Filters -->
<form method="get" class="filter-section grid grid-cols-3 gap-6 mb-6 items-end">
    <!-- Mã quảng cáo (Promotion Code) -->
    
    <div class="input-group">
        <label for="searchId" class="block text-sm font-medium text-gray-700">Mã quảng cáo</label>
        <input type="number" id="searchId" name="SearchId" placeholder="Nhập mã quảng cáo" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500" value="@Model.SearchId">
    </div>

    <!-- Trạng Thái (Status) -->
    <div class="input-group">
        <label for="SearchStatus" class="block text-sm font-medium text-gray-700">Trạng Thái</label>
                    <select id="SearchStatus" name="SearchStatus" class="mt-1 block w-full p-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500">
                        <option value="">Tất cả</option>
                        <option value="1" selected="@(Model.SearchStatus == 1 ? "selected" : null)">Còn hạn</option>
                        <option value="0" selected="@(Model.SearchStatus == 0 ? "selected" : null)">Hết hạn</option>
                    </select>
    </div>

    
</form>
            <!-- Table -->
            <table class="w-full table-auto border-collapse bg-white shadow-md mb-4">
                <thead>
                    <tr class="bg-gray-50">
                        <th class="p-3 border">Mã quảng cáo</th>
                        <th class="p-3 border">Ngày hết hạn</th>
                        <th class="p-3 border">Mức giá</th>
                        <th class="p-3 border">Mô tả</th>
                        <th class="p-3 border">Trạng thái</th>
                    </tr>
                </thead>
