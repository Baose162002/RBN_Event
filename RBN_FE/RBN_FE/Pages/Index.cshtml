            @if (Model.Events != null && Model.Events.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var eventItem in Model.Events)
                    {
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                @if (!string.IsNullOrEmpty(eventItem.EventImg?.ImageUrl))
                                {
                                    <img src="@eventItem.EventImg.ImageUrl" class="card-img-top" alt="@eventItem.Title" style="height: 200px; object-fit: cover;" loading="lazy">
                                }
                                else
                                {
                                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <span class="text-muted">Không có hình ảnh</span>
                                    </div>
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@eventItem.Title</h5>
                                    <p class="card-text">@eventItem.Name</p>
                                    <p class="card-text"><small class="text-muted">@eventItem.EventType</small></p>
                                </div>
                                <div class="card-footer d-flex justify-content-between align-items-center">
                                    <span class="text-primary font-weight-bold">@eventItem.Price.ToString("C")</span>
                                    <small class="text-muted">@eventItem.Company?.Name</small>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Phân trang -->
                <div class="mt-4 d-flex justify-content-between align-items-center">
                    <div>
                        @if (Model.PageNumber > 1)
                        {
                            <a class="btn btn-outline-secondary" asp-page-handler="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">Trước đó</a>
                        }
                    </div>
                    <div>
                        @if (Model.Events.Count() == Model.PageSize) // Kiểm tra xem có còn trang tiếp theo không
                        {
                            <a class="btn btn-outline-secondary" asp-page-handler="Index" asp-route-searchTerm="@Model.SearchTerm" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">Tiếp theo</a>
                        }
                    </div>
                    <div>
                        <span class="text-muted">Trang @Model.PageNumber</span>
                        <!-- Optionally, show total pages if you have that information -->
                        <!-- <span class="text-muted">/ @Model.TotalPages</span> -->
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    Không có sự kiện nào để hiển thị.
