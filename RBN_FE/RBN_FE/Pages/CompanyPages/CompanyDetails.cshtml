@page "{companyId:int}"
@model RBN_FE.Pages.CompanyPages.CompanyDetailsModel
@{
    ViewData["Title"] = "Chi tiết công ty";
}

<div class="company-details">
    <h1>Chi tiết công ty</h1>

    @if (Model.Company != null)
    {
        <div class="company-info">
            @if (!string.IsNullOrEmpty(Model.Company.Avatar))
            {
                <img src="@Model.Company.Avatar" alt="@Model.Company.Name" class="company-avatar">
            }
            <h2>@Model.Company.Name</h2>
            <p><strong>Mô tả:</strong> @Model.Company.Description</p>
            <p><strong>Địa chỉ:</strong> @Model.Company.Address</p>
            <p><strong>Số điện thoại:</strong> @Model.Company.Phone</p>
            <p><strong>Mã số thuế:</strong> @Model.Company.TaxCode</p>

            @if (Model.Company.Events != null && Model.Company.Events.Any())
            {
                <h3>Sự kiện đã tổ chức</h3>
                <div class="event-list">
                    @foreach (var evnt in Model.Company.Events)
                    {
                        <div class="event-item">
                            <h4>@evnt.Name</h4>
                            <p><strong>Loại sự kiện:</strong> @evnt.EventType</p>
                            <p><strong>Giá:</strong> @evnt.Price</p>
                            <p><strong>Mô tả:</strong> @evnt.Description</p>
                        </div>
                    }
                </div>
            }
        </div>
    }
    else
    {
        <p>Không tìm thấy thông tin công ty.</p>
    }

    <a href="javascript:history.back()" class="btn-back">Quay lại</a>
</div>

<style>
    .company-details {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif; /* Thay đổi font chữ */
    }

    .company-avatar {
        max-width: 200px;
        height: auto;
        margin-bottom: 20px;
        border-radius: 50%;
        border: 2px solid #007bff; /* Thêm đường viền */
    }

    .company-info {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Thêm bóng đổ */
    }

    .event-list {
        margin-top: 20px;
    }

    .event-item {
        background-color: #e9ecef; /* Màu nền cho mỗi sự kiện */
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
    }

    .btn-back {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

        .btn-back:hover {
            background-color: #0056b3; /* Thay đổi màu khi hover */
        }
</style>
