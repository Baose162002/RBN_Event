@page
@model RBN_FE.Pages.Admin.SubscriptionPackageManagementModel
@{
    ViewData["Title"] = "Subsctiption Package Management";
}
<div>
    <partial name="_AdminHeader" />


    <div class="flex overflow-hidden bg-white pt-16">
        <partial name="_AdminNav" />
        <div id="main-content" class="h-full w-full bg-gray-50 relative overflow-y-auto lg:ml-64">
            <main class="py-10 px-4">
                <div class="w-full max-w-full mb-6 mx-auto">
                    <div class="bg-white shadow rounded-lg p-4 sm:p-6 xl:p-8">
                        <div class="mb-4 flex items-center justify-between">
                            <div>
                                <h3 class="text-xl font-bold text-gray-900 mb-2">Quản lý gói đăng ký</h3>
                            </div>
                        </div>
                        <div class="flex flex-col mt-8">
                            <div class="overflow-x-auto rounded-lg">
                                <div class="align-middle inline-block min-w-full">
                                    <div class="shadow overflow-hidden sm:rounded-lg">
                                        <table class="min-w-full divide-y divide-gray-200">
                                            <thead class="bg-gray-50">
                                                <tr>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Tên công ty
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Số điện thoại
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Gói đăng ký
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Giá
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Ngày đăng ký
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Ngày hết hạn
                                                    </th>
                                                    <th scope="col" class="p-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                        Trạng thái
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody class="bg-white divide-y divide-gray-200">
                                                @foreach (var com in Model.Conpany)
                                                {
                                                    <tr>
                                                        <td class="p-2 whitespace-nowrap">
                                                            <div class="flex items-center">
                                                                <div class="ml-4">
                                                                    <div class="text-sm font-medium text-gray-900">@com.Name</div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td class="p-4 whitespace-nowrap">
                                                            <div class="text-sm text-gray-900">@com.Phone</div>
                                                        </td>
                                                        <td class="p-4 whitespace-nowrap">
                                                            <div class="text-sm text-gray-900">@com.SubscriptionPackage.Name</div>
                                                        </td>
                                                        <td class="text-sm text-blue-600">
                                                            @string.Format("{0:N0} VNĐ", com.SubscriptionPackage.Price)
                                                        </td>
                                                        <td class="text-sm text-gray-900">@com.SubscriptionStartTime</td>
                                                        <td class="text-sm text-gray-900">@com.SubscriptionEndTime</td>
                                                        <td class="p-4 whitespace-nowrap">
                                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full @(com.SubscriptionPackage.IsAvailable ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                                @(com.SubscriptionPackage.IsAvailable ? "Còn hạn" : "Hết hạn")
                                                            </span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <!-- end main content area -->
    </div>

    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="https://demo.themesberg.com/windster/app.bundle.js"></script>
</div>